	<!--MP5 Retractable Buttstock-->
	<ThingDef ParentName="Module_Stock">
		<defName>Module_G3Sa</defName>
		<label>MP5 Retractable Buttstock</label>
		<description>MP5 SMG retractable buttstock, light weight, simple and not very comfortable leaning your head on it.</description>
		<statBases>
			<WorkToMake>800</WorkToMake>
			<Mass>0.68</Mass>
			<Bulk>0.24</Bulk>
			<MarketValue>50</MarketValue>
		</statBases>
		<costList>
			<Plastic>1</Plastic>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>2</Crafting>
			</skillRequirements>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Stocks/PaWT_HKRB_Stocka</PartTexPath>
				<statOffset>
					<Bulk>0.24</Bulk>
					<MarketValue>50</MarketValue>
				</statOffset>
				<statMultiplier>
					<SwayFactor>0.9</SwayFactor>
					<RangedWeapon_Cooldown>1.05</RangedWeapon_Cooldown>
				</statMultiplier>
				<verbPropertiesMultiplier>
					<li>
						<!--<recoilAmount>0.8</recoilAmount>-->
						<warmupTime>0.95</warmupTime>
					</li>
				</verbPropertiesMultiplier>
			</li>
		</comps>
	</ThingDef>
	
