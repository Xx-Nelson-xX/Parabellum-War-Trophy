<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAdd">	
	<xpath>Defs/ThingDef[defName="PaWT_HK21EK" 
					  or defName="PaWT_HK25K"
					  or defName="PaWT_Abzats"]/weaponTags</xpath>
		<value>
			<li>Bipod_PaMG</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">	
	<xpath>Defs/ThingDef/projectile[@Class="CombatExtended.ProjectilePropertiesCE"]/casingMoteDefname[text()="Mote_ShotgunShell"]</xpath>
		<value>
			<casingMoteDefname>Fleck_ShotgunShell</casingMoteDefname>
		</value>
	</Operation>
	
</Patch>